<com.zhy.autolayout.AutoLinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/text_black3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <TextView
        android:id="@+id/favor_top_menu_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40px"
        android:text="置顶"
        android:textSize="@dimen/text_size2"
        android:textColor="@color/theme_bg"/>

    <TextView
        android:id="@+id/favor_remove_menu_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40px"
        android:text="取消收藏"
        android:textSize="@dimen/text_size2"
        android:textColor="@color/theme_bg"/>

</com.zhy.autolayout.AutoLinearLayout>