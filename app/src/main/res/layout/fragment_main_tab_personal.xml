<?xml version="1.0" encoding="utf-8"?>
<cn.bingoogolapple.refreshlayout.BGARefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 登录栏 -->
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/login_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <!-- 用户信息栏 -->
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="500px"
                    android:gravity="center">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/userImg_iv"
                            android:layout_width="200px"
                            android:layout_height="200px"
                            android:src="@mipmap/pic_user_default" />

                        <TextView
                            android:id="@+id/userName_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:text="未登录"
                            android:textColor="@color/text_black3" />
                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoRelativeLayout>

                <!-- 三方登录 -->
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/third_login_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <!-- 登录提示 -->
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_marginLeft="80px"
                            android:layout_marginRight="20px"
                            android:layout_weight="1"
                            android:background="@color/divider" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="快捷登录"
                            android:textColor="@color/text_black3" />

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_marginLeft="20px"
                            android:layout_marginRight="80px"
                            android:layout_weight="1"
                            android:background="@color/divider" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <!-- 登录 -->
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20px"
                        android:background="@drawable/bg_layout_frame"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- 手机-->
                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/phone_login_ll"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="40px"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_share_phone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10px"
                                android:text="手机"
                                android:textColor="@color/text_black2"
                                android:textSize="@dimen/text_size4" />

                        </com.zhy.autolayout.AutoLinearLayout>

                        <!-- 微博 -->
                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/sina_login_ll"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="40px"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_share_sina" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10px"
                                android:text="微博"
                                android:textColor="@color/text_black2"
                                android:textSize="@dimen/text_size4" />

                        </com.zhy.autolayout.AutoLinearLayout>

                        <!-- QQ -->
                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/qq_login_ll"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="40px"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_share_qq" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10px"
                                android:text="QQ"
                                android:textColor="@color/text_black2"
                                android:textSize="@dimen/text_size4" />

                        </com.zhy.autolayout.AutoLinearLayout>

                        <!-- 微信 -->
                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/wx_login_ll"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="40px"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_share_wx" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10px"
                                android:text="微信"
                                android:textColor="@color/text_black2"
                                android:textSize="@dimen/text_size4" />

                        </com.zhy.autolayout.AutoLinearLayout>

                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>


            <!-- 应用栏 -->
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/menu_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:background="@drawable/bg_layout_frame"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- 分享 -->
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/share_menu_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="40px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_setting_menu_share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="分享"
                        android:textColor="@color/text_black2"
                        android:textSize="@dimen/text_size4" />

                </com.zhy.autolayout.AutoLinearLayout>

                <!-- 评论-->
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/comment_menu_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="40px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_setting_menu_comment" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="评论"
                        android:textColor="@color/text_black2"
                        android:textSize="@dimen/text_size4" />

                </com.zhy.autolayout.AutoLinearLayout>


                <!-- 点赞 -->
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/like_menu_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="40px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_setting_menu_like" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="点赞"
                        android:textColor="@color/text_black2"
                        android:textSize="@dimen/text_size4" />

                </com.zhy.autolayout.AutoLinearLayout>

                <!-- 最近 -->
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/recent_menu_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="40px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_setting_menu_history" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="最近"
                        android:textColor="@color/text_black2"
                        android:textSize="@dimen/text_size4" />

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <!-- 其他工具栏 -->
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/other_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/theme_bg"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <include layout="@layout/divider_h" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/msg_setting_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20px"
                            android:layout_marginLeft="40px"
                            android:layout_marginRight="40px"
                            android:layout_marginTop="20px"
                            android:src="@mipmap/icon_setting_msg" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="消息通知"
                            android:textColor="@color/text_black1"
                            android:textSize="@dimen/text_size2" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20px"
                            android:layout_marginLeft="40px"
                            android:layout_marginRight="40px"
                            android:layout_marginTop="20px"
                            android:src="@mipmap/icon_setting_right" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>

                <include layout="@layout/divider_h" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/feedback_setting_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20px"
                            android:layout_marginLeft="40px"
                            android:layout_marginRight="40px"
                            android:layout_marginTop="20px"
                            android:src="@mipmap/icon_setting_feedback" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="用户反馈"
                            android:textColor="@color/text_black1"
                            android:textSize="@dimen/text_size2" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20px"
                            android:layout_marginLeft="40px"
                            android:layout_marginRight="40px"
                            android:layout_marginTop="20px"
                            android:src="@mipmap/icon_setting_right" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>

                <include layout="@layout/divider_h" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/update_setting_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20px"
                            android:layout_marginLeft="40px"
                            android:layout_marginRight="40px"
                            android:layout_marginTop="20px"
                            android:src="@mipmap/icon_setting_update" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="检查更新"
                            android:textColor="@color/text_black1"
                            android:textSize="@dimen/text_size2" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20px"
                            android:layout_marginLeft="40px"
                            android:layout_marginRight="40px"
                            android:layout_marginTop="20px"
                            android:src="@mipmap/icon_setting_right" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>

                <include layout="@layout/divider_h" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/clear_setting_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20px"
                            android:layout_marginLeft="40px"
                            android:layout_marginRight="40px"
                            android:layout_marginTop="20px"
                            android:src="@mipmap/icon_setting_clear" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="清理缓存"
                            android:textColor="@color/text_black1"
                            android:textSize="@dimen/text_size2" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20px"
                            android:layout_marginLeft="40px"
                            android:layout_marginRight="40px"
                            android:layout_marginTop="20px"
                            android:src="@mipmap/icon_setting_right" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>

                <include layout="@layout/divider_h" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/about_setting_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20px"
                            android:layout_marginLeft="40px"
                            android:layout_marginRight="40px"
                            android:layout_marginTop="20px"
                            android:src="@mipmap/icon_setting_about" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="关于我们"
                            android:textColor="@color/text_black1"
                            android:textSize="@dimen/text_size2" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20px"
                            android:layout_marginLeft="40px"
                            android:layout_marginRight="40px"
                            android:layout_marginTop="20px"
                            android:src="@mipmap/icon_setting_right" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>

                <include layout="@layout/divider_h" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/exit_setting_ll"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_margin="40px"
                    android:background="@drawable/bg_btn_exit_frame"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退出登录"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size2" />
                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</cn.bingoogolapple.refreshlayout.BGARefreshLayout>