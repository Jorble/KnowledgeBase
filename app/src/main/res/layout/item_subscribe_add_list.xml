<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_bg"
    android:layout_marginTop="10px"
    android:layout_marginBottom="10px"
    android:layout_marginLeft="40px"
    android:layout_marginRight="40px"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/pic_iv"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_margin="5px"
        android:scaleType="fitXY"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="20px"
        android:orientation="vertical">
        <com.klinker.android.link_builder.LinkConsumableTextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="名称"
            android:textColor="@color/text_black1"
            android:textSize="@dimen/text_size2" />

        <TextView
            android:id="@+id/count_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="2132人关注"
            android:textColor="@color/text_black3"
            android:textSize="@dimen/text_size4" />

    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/subscribe_bt"
        android:layout_width="250px"
        android:layout_height="100px"
        android:layout_gravity="center_vertical"
        android:layout_margin="10px"
        android:text="订阅"
        android:textSize="14sp"
        android:textColor="@drawable/selector_text_btn"
        android:background="@drawable/selector_btn_text"/>

</com.zhy.autolayout.AutoLinearLayout>