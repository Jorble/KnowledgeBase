<com.zhy.autolayout.AutoLinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/theme_bg"
    android:padding="40px"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_layout_frame">
        <EditText
            android:id="@+id/pop_comment_et"
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:layout_margin="20px"
            android:gravity="left"
            android:maxLength="200"
            android:textSize="14sp"
            android:textColor="@color/text_black1"
            android:hint="我来说两句"
            android:background="@null"
            />
    </com.zhy.autolayout.AutoLinearLayout>


    <ImageView
        android:id="@+id/pop_send_iv"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_marginTop="20px"
        android:layout_marginRight="20px"
        android:layout_marginLeft="20px"
        android:layout_gravity="right"
        android:layout_centerVertical="true"
        android:src="@drawable/selector_btn_send"/>

</com.zhy.autolayout.AutoLinearLayout>