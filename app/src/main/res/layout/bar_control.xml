<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90px"
    android:layout_margin="5px"
    android:gravity="center_vertical"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/share_ll"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/share_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4px"
            android:background="#00000000"
            android:src="@mipmap/icon_action_share_normal"/>
        <TextView
            android:id="@+id/shareCount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4px"
            android:layout_gravity="center"
            android:maxLines="1"
            android:gravity="center"
            android:text="1.3万"
            android:textSize="@dimen/text_size4"
            android:textColor="@color/text_black3"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/comment_ll"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/comment_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4px"
            android:background="#00000000"
            android:src="@mipmap/icon_action_comment_normal"/>
        <TextView
            android:id="@+id/commentCount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4px"
            android:layout_gravity="center"
            android:maxLines="1"
            android:gravity="center"
            android:text="1.3万"
            android:textSize="@dimen/text_size4"
            android:textColor="@color/text_black3"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/dislike_ll"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/dislike_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4px"
            android:background="#00000000"
            android:src="@mipmap/icon_action_dislike_normal"/>
        <TextView
            android:id="@+id/dislikeCount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4px"
            android:layout_gravity="center"
            android:maxLines="1"
            android:gravity="center"
            android:text="1.3万"
            android:textSize="@dimen/text_size4"
            android:textColor="@color/text_black3"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/like_ll"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/like_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4px"
            android:background="#00000000"
            android:src="@mipmap/icon_action_like_normal"/>
        <TextView
            android:id="@+id/likeCount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4px"
            android:layout_gravity="center"
            android:maxLines="1"
            android:gravity="center"
            android:text="1.3万"
            android:textSize="@dimen/text_size4"
            android:textColor="@color/text_black3"/>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>